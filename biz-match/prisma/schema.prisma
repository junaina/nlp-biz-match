datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

/**
 * A company in the marketplace.
 * For Day 1 we only keep a name; more fields (bio, website, etc.)
 * will be added on later days.
 */
model Business {
  id        String   @id @default(uuid())
  name      String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users     User[]
}

/**
 * A user who logs into the system.
 * Each user belongs to exactly one Business.
 */
model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  name         String

  businessId   String
  business     Business @relation(fields: [businessId], references: [id])

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}